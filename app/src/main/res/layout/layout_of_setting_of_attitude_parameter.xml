<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="伺服校准"
    android:textSize="15sp"
    android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="变焦"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/seekbar_zooming"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edittext_zooming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="横滚"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/seekbar_roll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edittext_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="俯仰"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/seekbar_pitch"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edittext_pitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="油门"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/seekbar_throttle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edittext_throttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="相机偏航"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/seekbar_yaw_camera"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edittext_yaw_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="相机俯仰"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/seekbar_pitch_camera"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edittext_pitch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="前壁灯"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <Spinner
        android:id="@+id/spinner_of_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/qianbilight"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="指南针校准"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <Spinner
        android:id="@+id/spinner_of_compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>