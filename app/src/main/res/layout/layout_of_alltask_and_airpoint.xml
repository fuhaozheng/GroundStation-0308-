<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/id_of_airpoint_zone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone">
    <include layout="@layout/layout_of_airpoint_zone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_of_task_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/layout_of_task_zone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_of_zone_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/layout_of_zone_task"/>
    </LinearLayout>
</RelativeLayout>