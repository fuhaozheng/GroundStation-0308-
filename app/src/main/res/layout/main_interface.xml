<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">
<!-- left -->    
<RelativeLayout
    android:id="@+id/left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true">
  <include layout="@layout/main_interface_left"/>
</RelativeLayout>
    <!-- right -->
    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <include layout="@layout/main_interface_right"/>
    </RelativeLayout>
<!-- middle --> 
<RelativeLayout
    android:id="@+id/middle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/left"
    android:layout_toLeftOf="@id/right"
    android:layout_marginLeft="10dp">
<LinearLayout
    android:id="@+id/uav_battery"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">
  <include layout="@layout/uav_battery"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/main_interface_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <include layout="@layout/main_interface_bottom"/>
    </LinearLayout>
  <RelativeLayout
    android:id="@+id/rl"
    android:layout_width="900dp"
    android:layout_height="720dp"
    android:layout_above="@id/main_interface_bottom"
    android:layout_below="@id/uav_battery"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
       <LinearLayout
           android:layout_alignTop="@id/surfaceView"
           android:layout_alignLeft="@id/surfaceView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true">
           <Button
               android:id="@+id/video"
               android:layout_width="31dp"
               android:layout_height="18dp"
               android:layout_gravity="center_vertical"
               android:background="@drawable/icn_video"/>
           <TextView
               android:id="@+id/video_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:textSize="18sp"
               android:layout_marginLeft="12dp"
               android:textColor="#F7F7F7"
               android:text="1"/>
           </LinearLayout>
       <ZoomButton
           android:id="@+id/zoom_add"
           android:layout_width="37dp"
           android:layout_height="37dp"
           android:layout_alignLeft="@id/surfaceView"
           android:layout_centerVertical="true"
           android:background="@drawable/btn_zoom_add"/>
       <Button
           android:id="@+id/unfold"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignBottom="@id/surfaceView"
           android:layout_alignLeft="@id/surfaceView"
           android:background="@drawable/btn_unfold"/>
      <TextView
          android:id="@+id/warning_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#FF0000"
          android:textSize="20sp"
          android:text="摄像机卡满"
          android:layout_centerInParent="true"/>
          <RelativeLayout
              android:id="@+id/relativeLayout2"
              android:layout_width="138dp"
              android:layout_height="85dp"
              android:layout_alignBottom="@id/surfaceView"
              android:layout_alignLeft="@id/surfaceView"
              android:visibility="gone">
              <Button
                  android:layout_width="43dp"
                  android:layout_height="23dp"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentLeft="true"
                  android:background="@drawable/icn_direction"/>
              <Button
                  android:id="@+id/pack_up"
                  android:layout_width="23dp"
                  android:layout_height="23dp"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentRight="true"
                  android:background="@drawable/btn_pack_up"/>
          </RelativeLayout>
          <ZoomButton
              android:id="@+id/zoom_subtract"
              android:layout_width="37dp"
              android:layout_height="37dp"
              android:layout_alignRight="@id/surfaceView"
              android:layout_centerVertical="true"
              android:background="@drawable/btn_zoom_subtract"/>
</RelativeLayout>
</RelativeLayout>

</RelativeLayout>
</RelativeLayout>
