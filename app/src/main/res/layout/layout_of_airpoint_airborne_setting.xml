<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="相机类型"
    android:textSize="15sp"/>
    <Spinner
        android:id="@+id/spinner_of_camera_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/camera_type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机编号"
        android:textSize="15sp"/>
    <Spinner
        android:id="@+id/spinner_of_camera_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/camera_serial_number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机偏航角模式"
        android:textSize="15sp"/>
    <Spinner
        android:id="@+id/spinner_of_camera_yaw_angle_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/camera_yaw_angle_mode"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机俯仰横滚设置"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相机俯仰角度"
            android:textSize="15sp"/>
        <SeekBar
            android:id="@+id/seekbar_camera_pitch_angle_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:max="180"/>
        <TextView
            android:id="@+id/value_of_camera_pitch_angle_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相机横滚角度"
            android:textSize="15sp"/>
        <SeekBar
            android:id="@+id/seekbar_camera_roll_angle_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:max="180"/>
        <TextView
            android:id="@+id/value_of_camera_roll_angle_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>